@using Microsoft.Extensions.Localization
@inject IStringLocalizer _localizer
@{
    ViewData["Title"] = _localizer.GetString("Admin.ListOfNotifications");
}
<div class="row">
    <div class="col-lg-12 col-md-12">
        <div class="card">
            <div class="card-header card-header-tabs card-header-warning">
                <div class="nav-tabs-navigation">
                    <div class="nav-tabs-wrapper">
                        @*<span class="nav-tabs-title">Tasks:</span>*@
                        <ul class="nav nav-tabs" data-tabs="tabs">
                            <li class="nav-item">
                                <a class="nav-link active" href="#users" data-toggle="tab">
                                    <i class="material-icons">library_books</i> @_localizer.GetString("Admin.Notifications")
                                    <div class="ripple-container"></div>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="tab-content">
                    <div class="tab-pane active" id="users">
                        <sg-table ctrl="Notifications" datasrc="Notifications/List" has-operation="false" create-action="@Url.Action("PrepareNotifications", "Notifications",new { id = 0 })" token="0">
                            <sg-col name="Message" title="@_localizer.GetString("Admin.Notifications.Message")" type="text"></sg-col>
                        </sg-table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

