<div class="row">
    <div class="col-lg-12 col-md-12">
        <div class="card" ng-controller="pageCtrl">
            <div class="card-header card-header-tabs card-header-warning">
                <div class="nav-tabs-navigation">
                    <div class="nav-tabs-wrapper">
                        <ul class="nav nav-tabs" data-tabs="tabs">
                            <li class="nav-item">
                                <a class="nav-link active" href="#userOrder" data-toggle="tab">
                                    <i class="material-icons">library_books</i> @_localizer.GetString("Admin.UserOrderReport")
                                    <div class="ripple-container"></div>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#orderbyshow" data-toggle="tab">
                                    <i class="material-icons">library_books</i> @_localizer.GetString("Admin.OrderByShow")
                                    <div class="ripple-container"></div>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#canceledorders" data-toggle="tab">
                                    <i class="material-icons">library_books</i> @_localizer.GetString("Admin.CancelationReport")
                                    <div class="ripple-container"></div>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#PaymentReport" data-toggle="tab">
                                    <i class="material-icons">euro_symbol</i> @_localizer.GetString("Admin.PaymentReport")
                                    <div class="ripple-container"></div>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#ShowReport" data-toggle="tab">
                                    <i class="material-icons">library_books</i> @_localizer.GetString("Admin.ShowReport")
                                    <div class="ripple-container"></div>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="tab-content">
                    <div class="tab-pane active" id="userOrder">
                        @Html.Partial("_UserOrderReport")
                    </div>
                    <div class="tab-pane" id="orderbyshow">
                        @Html.Partial("_OrderByShow")
                    </div>
                    <div class="tab-pane" id="canceledorders">
                        @Html.Partial("_CancelationReport")
                    </div>
                    <div class="tab-pane" id="PaymentReport">
                        @Html.Partial("_paymentReport")
                    </div>
                    <div class="tab-pane" id="ShowReport">
                        @Html.Partial("_showReport")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

