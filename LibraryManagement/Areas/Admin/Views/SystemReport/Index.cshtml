@using Microsoft.Extensions.Localization
@using Seagull.Core.Helper
@inject IStringLocalizer _localizer
@inject IGlobalSettings _userService

@{
    ViewData["Title"] = _localizer.GetString("Admin.Report");
    string Isrtl = _userService.CurrentUser.IsRtl.ToString().ToLower();

}
<link href="~/css/CircularPercentage/CircularProgress.css" rel="stylesheet" />

<style>
    .inner {
        text-align: center;
        margin: 15px auto;
        /*margin-left: 0px;*/
    }

    .panel-title {
        text-align: center;
    }

    .modal-dialog {
        min-width: 80% !important;
    }

    .modal-content {
        height: auto;
        border-radius: 0;
    }

    .modalHeader {
        background-color: #13688c;
        color: white;
    }

    .headerText {
        width: 100%;
        text-align: -webkit-center;
    }
</style>
