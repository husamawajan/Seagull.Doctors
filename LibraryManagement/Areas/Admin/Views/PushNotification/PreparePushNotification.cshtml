<div class="row">
    <div class="col-lg-12 col-md-12">
        <div class="card">
            <div class="card-header card-header-tabs card-header-warning">
                <div class="nav-tabs-navigation">
                    <div class="nav-tabs-wrapper">
                        @*<span class="nav-tabs-title">Tasks:</span>*@
                        <ul class="nav nav-tabs" data-tabs="tabs">
                            <li class="nav-item">
                                <a class="nav-link active" href="#users" data-toggle="tab">
                                    <i class="material-icons">library_books</i> @_localizer.GetString("Admin.AddEditPushNOtification")
                                    <div class="ripple-container"></div>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="tab-content">
                    <div class="tab-pane active" id="users">
                        <form sg-form name="myform" data-ctrl="PushNotification" data-id="@Model" token="0" form-controller="PushNotification">
                            <sg-form-toolbar save="true"></sg-form-toolbar>
                            <sg-select token="0" label="@_localizer.GetString("ADMIN.Users")" datasrc="GenericGets/GetAllUsersHasFCMToken" ng-required="true" @*ng-change="check()" *@ return-col="Id" return-as="Name" ng-model="model.strUser" multi="false"></sg-select>
                            <sg-input type="text" name="NotificationMessage" label="@_localizer.GetString("Admin.Send.Notification")" ng-model="model.NotificationMessage" ng-required="true"></sg-input>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


