@model int
@using Microsoft.Extensions.Localization
@inject IStringLocalizer _localizer
@{
    ViewData["Title"] = _localizer.GetString("Admin.PreparePushNotification");
    bool disable = Model > 0 ? true : false;
    string canModify = Model > 0 ? false.ToString().ToLower() : true.ToString().ToLower();
}

<style>
    .divDash {
        outline-color: black;
        outline-style: dashed;
        padding: 11px;
        margin: 9px 0px 18px 0px;
    }

    .blueDash {
        outline-color: #dd4b39;
    }

    .greenDash {
        outline-color: #4caf50;
    }

    .panel-title {
        text-align: center;
        margin-top: 2%;
    }

    .btn-toolbar {
        display: flex;
        flex-wrap: wrap;
        justify-content: center !important;
    }

    .form-control, label, input::placeholder {
        line-height: 1.1;
        height: 100% !important;
    }

    hr {
        border: none;
        height: 2px;
        /* Set the hr color */
        color: #13688c; /* old IE */
        background-color: #13688c; /* Modern Browsers */
    }
</style>
<link rel="stylesheet" href="http://netdna.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css">
<style>
    .ta-editor {
        min-height: 150px;
        height: auto;
        overflow: auto;
        font-family: inherit;
        font-size: 100%;
    }

    li {
        font-size: 18px;
        font-size: 100%;
    }

    .ta-toolbar > .btn-group > .btn {
        border-top-right-radius: 0;
        border-bottom-right-radius: 0;
